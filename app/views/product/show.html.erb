<p>Show#index</p>
 <br>
  <% (0...@product.images.count).each do |image|%>
 <%= image_tag(@product.images[image])%>
 <%end%>
 <br>
 <strong> <%=@product.id%> </strong> <br>

 <strong> Name: </strong><%= @product.name%> <br>
 <strong> Description: </strong><%= @product.description%> <br>

 <strong> Price:</strong> <%= @product.price%>Rs-/ <br>
  <%if user_signed_in?%>
    <% if @product.user_id == current_user.id%>
         <%=link_to "Edit Product",edit_product_path(@product)%>
         <%=link_to "Delete Product",product_path(@product),method: :delete%>
     <%end%>
  <%end%>
<%if user_signed_in?%>
  <%= form_with model: [@product,@comment] do |f|%>
   <%= f.text_field :body%>
   <%=f.submit%>
   <%end%>

  <%else%>
<p> you need to <%= link_to 'log in',new_user_session_path%> before you can comment on product.</p>
<%end%>

<h2>Comments:</h2><br>
<div id="comment_section">
<%@comments.each do |comment|%>
<%=render 'comments/comment',comment:comment%>
<%end%>
</div>